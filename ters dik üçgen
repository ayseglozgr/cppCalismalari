
#include <iostream>
using namespace std;


int main()
{
	int numberOfsize;
	cout << "Enter size of triangle : ";
	cin >> numberOfsize;
	for (int a = 0; a < numberOfsize; a++)
	{
		for (int space = 0; space < a; space++)
		{
			cout << " ";
		}
			
		for (int starCount = 0; starCount < numberOfsize - a; starCount++)
		{
			cout << "*";

		}
		cout << endl;
	}
	return 0;
}

